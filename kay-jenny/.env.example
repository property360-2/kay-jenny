# Django Settings
DEBUG=true
SECRET_KEY=your-secret-key-here-generate-one-locally
ALLOWED_HOSTS=localhost,127.0.0.1,your-render-url.onrender.com

# Database Configuration (defaults to SQLite for local development)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# For PostgreSQL (uncomment and update if you want Postgres locally)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=fcj_pizza
# DB_USER=fcj_pizza_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# OR use DATABASE_URL for Render/production
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Database Connection Pooling (PostgreSQL)
DB_CONN_MAX_AGE=600

# Python
PYTHONUNBUFFERED=1

# Email Configuration (Optional)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Security (Production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# For Render (set to True):
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
